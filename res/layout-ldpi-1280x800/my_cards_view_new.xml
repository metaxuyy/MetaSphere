    <RelativeLayout
        android:id="@+id/layout_root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:id="@+id/btn_header"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:background="@drawable/titlebar_lightgray_bg"
            android:gravity="center_vertical"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip" >

            <ImageView
                android:id="@+id/qiehuan_btn"
                android:layout_width="56.0dip"
                android:layout_height="46.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/title_button"
                android:gravity="center"
                android:paddingBottom="7.0dip"
                android:paddingLeft="9.0dip"
                android:paddingRight="9.0dip"
                android:paddingTop="7.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/ic_title_list" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="32.0dip"
                android:layout_centerInParent="true"
                android:layout_marginLeft="72.0dip"
                android:layout_marginRight="72.0dip"
                android:layout_weight="6.0"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/layout1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0" >

                    <TextView
                        android:id="@+id/txtv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="全部卡"
                        android:textColor="#ffffff"
                        android:textSize="22.0dip" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0" >

                    <TextView
                        android:id="@+id/txtv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="关注卡"
                        android:textColor="#ffffff"
                        android:textSize="22.0dip" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0" >

                    <TextView
                        android:id="@+id/txtv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="关注券"
                        android:textColor="#ffffff"
                        android:textSize="22.0dip" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/add_vip_card"
                android:layout_width="56.0dip"
                android:layout_height="46.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/title_button"
                android:gravity="center"
                android:paddingBottom="7.0dip"
                android:paddingLeft="9.0dip"
                android:paddingRight="9.0dip"
                android:paddingTop="7.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/ic_title_add" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/mycardsLayouts"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/btn_header"
            android:orientation="vertical"
            android:visibility="gone" >
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/btn_header" >

            <ProgressBar
                android:id="@+id/probar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminateDrawable="@drawable/my_progressbar_bg_color" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/help_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#00000000"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="35.0dip"
            android:paddingRight="25.0dip"
            android:src="@drawable/add_vip_img" />
    </RelativeLayout>

</FrameLayout>