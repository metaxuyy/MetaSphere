<resources>

    <declare-styleable name="ViewfinderView"></declare-styleable>
    <declare-styleable name="AnimatedSizingGallery">

        <!-- defaults to 2.0 -->
        <attr format="float" name="animationScale" />
        <!-- defaults to 0.0 - no vertical movement -->
        <attr format="float" name="animationOffsetY" />
        <!-- defaults to 500 -->
        <attr format="integer" name="animationDuration" />
    </declare-styleable>

    <string-array name="roomnumber">
        <item>1 间房</item>
        <item>2 间房</item>
        <item>3 间房</item>
        <item>4 间房</item>
        <item>5 间房</item>
        <item>6 间房</item>
        <item>7 间房</item>
        <item>8 间房</item>
    </string-array>

    <declare-styleable name="Panel">

        <!-- Defines panel animation duration in ms. -->
        <attr format="integer" name="Panel_animationDuration" />
        <!-- Defines panel position on the screen. -->
        <attr name="position">

            <!-- Panel placed at top of the screen. -->
            <enum name="top" value="0" />
            <!-- Panel placed at bottom of the screen. -->
            <enum name="bottom" value="1" />
            <!-- Panel placed at left of the screen. -->
            <enum name="left" value="2" />
            <!-- Panel placed at right of the screen. -->
            <enum name="right" value="3" />
        </attr>
        <!-- Identifier for the child that represents the panel's handle. -->
        <attr format="reference" name="handle" />
        <!-- Identifier for the child that represents the panel's content. -->
        <attr format="reference" name="content" />
        <!-- Defines if flying gesture forces linear interpolator in animation. -->
        <attr format="boolean" name="linearFlying" />
        <!-- Defines size relative to parent (must be in form: nn%p). -->
        <attr format="fraction" name="weight" />
        <!-- Defines opened handle (drawable/color). -->
        <attr format="reference|color" name="openedHandle" />
        <!-- Defines closed handle (drawable/color). -->
        <attr format="reference|color" name="closedHandle" />
    </declare-styleable>
    <declare-styleable name="RoundAngleImageView">
        <attr format="dimension" name="roundWidth" />
        <attr format="dimension" name="roundHeight" />
    </declare-styleable>
    <declare-styleable name="SideBar">
        <attr format="dimension" name="textSize" />
        <attr format="dimension" name="textHeight" />
    </declare-styleable>
    
    <declare-styleable name="StaggeredGridView">
        <attr name="drawSelectorOnTop" format="boolean" />
        <attr name="numColumns" format="integer" />
        <attr name="itemMargin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="PowerImageView">
        <attr name="auto_play" format="boolean"></attr>
    </declare-styleable>
</resources>