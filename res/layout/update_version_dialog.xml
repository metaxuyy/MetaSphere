<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exit_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/confirm_dialog_bg2"
    android:gravity="center_horizontal"
    android:paddingBottom="20dip"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/hotel_label_148"
        android:textColor="#333"
        android:textSize="20sp" />
	
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_below="@id/title_txt"
        android:layout_width="fill_parent"
        android:layout_marginBottom="15dip"
        android:layout_height="200dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
		    <TextView
		        android:id="@+id/content_txt"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="1dp"
		        android:layout_marginLeft="10dip"
		        android:layout_marginRight="10dip"
		        android:text="1.解决了上下拉公告栏报错"
		        android:textColor="#333"
		        android:textSize="16sp" />
	    </LinearLayout>
    </ScrollView>

	<LinearLayout
        android:id="@+id/dowload_layout"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/exitBtn0"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_style_green"
            android:gravity="center"
            android:onClick="dowloadbtn"
            android:text="@string/hotel_label_150"
            android:textColor="#fff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/exitBtn1"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_style_white"
            android:gravity="center"
            android:onClick="exitbutton"
            android:text="@string/sns_has_liked"
            android:textColor="#333"
            android:textSize="16sp" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/jindutiao_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style_two_pressed"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/hotel_label_169"
            android:textColor="#333"
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/load_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0%"
            android:textColor="#333"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>