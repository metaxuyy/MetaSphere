<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5.0dip"
    android:paddingTop="5.0dip" >

    <RelativeLayout
        android:id="@+id/relImage"
        android:layout_width="82.0dip"
        android:layout_height="82.0dip"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10.0dip" >

        <ImageView
            android:id="@+id/imgClothesIcon"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_marginLeft="1.0dip"
            android:layout_marginTop="1.0dip" />

        <ImageView
            android:layout_width="82.0dip"
            android:layout_height="82.0dip"
            android:background="@drawable/border_80" />

        <ImageView
            android:id="@+id/imgIsNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/isnew"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imgIsBargain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/issale"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="10.0dip" >

        <TextView
            android:id="@+id/textClothesName"
            style="@style/style_15_666666_BOLD"
            android:layout_width="180.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:maxLines="2" />

        <LinearLayout
            android:id="@+id/price_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textClothesName"
            android:layout_marginTop="5.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textClothesPrice"
                style="@style/style_15_C21513_BOLD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:orientation="horizontal" >

                <TextView
                    style="@style/style_13_4B4B4B_BOLD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_lable_148" />

                <TextView
                    android:id="@+id/sales"
                    style="@style/style_15_C21513_BOLD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />
            </LinearLayout>
        </LinearLayout>

        <RatingBar
            android:id="@+id/five_star_img"
            style="@style/my_ratingbar_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/price_lay"
            android:layout_marginTop="5.0dip"
            android:isIndicator="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow" />
    </RelativeLayout>

</LinearLayout>