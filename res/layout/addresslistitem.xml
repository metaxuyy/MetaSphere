<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linAddr_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="15.0dip"
            android:paddingTop="5.0dip" >

            <RelativeLayout
                android:id="@+id/relAddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2.0dip"
                android:layout_marginTop="2.0dip" >

                <TextView
                    style="@style/style_16_C21513_BOLD"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_lable_73" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow" />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line" />

            <TextView
                android:id="@+id/textName"
                style="@style/style_14_4B4B4B"
                android:layout_width="250.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip" />

            <TextView
                android:id="@+id/textCity"
                style="@style/style_14_9F9F9F"
                android:layout_width="250.0dip"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textCity_detail"
                style="@style/style_14_9F9F9F"
                android:layout_width="250.0dip"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textPostcode"
                style="@style/style_14_9F9F9F"
                android:layout_width="250.0dip"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textTele"
                style="@style/style_14_9F9F9F"
                android:layout_width="250.0dip"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textPhone"
                style="@style/style_14_9F9F9F"
                android:layout_width="250.0dip"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgAddr_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="15.0dip"
            android:src="@drawable/ok" />
    </RelativeLayout>

</LinearLayout>