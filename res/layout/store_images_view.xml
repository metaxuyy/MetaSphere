<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/ms.activitys"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
	    <ms.globalclass.imagegrid.HackyViewPager
	        android:id="@+id/hackyViewPager"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent" >
	    </ms.globalclass.imagegrid.HackyViewPager>
	    
	    <LinearLayout
	        android:id="@+id/head"
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/title_bg_height"
	        android:background="@drawable/title_bar"
	        android:gravity="center_vertical"
	        android:layout_alignParentTop="true"
	        android:orientation="horizontal" >
	
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="2"
	            android:orientation="vertical" >
	
	            <ImageButton
	                android:id="@+id/save_btn"
	                android:layout_width="@dimen/title_bg_button_width"
	                android:layout_height="wrap_content"
	                android:background="@drawable/foot_btn_show"
	                android:src="@drawable/preview_save_icon"
	                android:textColor="#FFFFFF"
	                android:textSize="12dip"
	                android:textStyle="bold" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:orientation="vertical" >
	
	            <TextView
	                android:id="@+id/title_lable"
	                style="@style/TextStyle"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:focusableInTouchMode="true"
	                android:focusable="true"
	                android:text=""
	                android:textColor="#FFFFFF"
	                android:textSize="@dimen/title_bg_text_size"
	                android:textStyle="bold" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="2"
	            android:gravity="center_vertical"
	            android:orientation="vertical" >
	
	            <Button
	                android:id="@+id/zhan_btn"
	                android:layout_width="@dimen/title_bg_button_width"
	                android:layout_height="wrap_content"
	                android:background="@drawable/foot_btn_show"
	                android:drawableLeft="@drawable/compose_emoticonbutton_background"
	                android:text="0"
	                android:textColor="#FFFFFF"
	                android:textSize="16dip"
	                android:textStyle="bold" />
	            
	        </LinearLayout>
	    </LinearLayout>
	    
	    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/content_txt" android:textColor="#ffffff" android:padding="5dip" android:background="#000000" android:ellipsize="end" android:singleLine="false" android:maxLines="3" android:layout_alignParentBottom="true" android:text="ddd"/>
    </RelativeLayout>

</LinearLayout>