<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingRight="10.0dip" >

    <LinearLayout
        android:id="@id/LinearLayout02"
        android:layout_width="75.0dip"
        android:layout_height="fill_parent"
        android:background="@drawable/theme_title_pink"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="5.0dip"
        android:paddingLeft="5.0dip"
        android:paddingTop="5.0dip" >

        <TextView
            android:id="@+id/station_typeName_TextView"
            style="@style/text_mid_Orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5.0dip"
            android:text="Dongchesssssssssssssssss" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@id/station_startName_TextView"
            style="@style/text_mid_grey"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:text="出发站：上海长途汽车客运总站" />

        <TextView
            android:id="@id/station_endName_TextView"
            style="@style/text_mid_grey"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:text="到达站：西安南站" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/prices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:text="票价：10y"
                android:textColor="@color/traincode_textcolor" />

            <TextView
                android:id="@+id/kilometers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:paddingLeft="5.0dip"
                android:text=""
                android:textColor="@color/traincode_textcolor" />

            <TextView
                android:id="@+id/kilometeras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:paddingLeft="5.0dip"
                android:text=""
                android:textColor="@color/traincode_textcolor" />

            <TextView
                android:id="@+id/kilometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:paddingLeft="5.0dip"
                android:text="里程：14KM"
                android:textColor="@color/traincode_textcolor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/strtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:text="发车时间：21：14"
                android:textColor="@color/traincode_textcolor" />
        </LinearLayout>

        <TextView
            android:id="@+id/other"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:text="其他：始发站 有配载"
            android:textColor="@color/traincode_textcolor" />
    </LinearLayout>

</LinearLayout>