                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/right_img2"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="matrix"
                    android:src="@drawable/mm_submenu" />
                
                <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_toRightOf="@id/left_txt2" android:layout_toLeftOf="@id/right_img2" android:gravity="right|center_vertical">
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/name_txt"
	                    android:padding="8dp"
	                    android:text=""
	                    android:textColor="#6E6E6E"
	                    android:textSize="17sp" />
                </LinearLayout>
         </RelativeLayout>

         <RelativeLayout
                android:id="@+id/LinearLayout9"
                android:layout_width="fill_parent"
