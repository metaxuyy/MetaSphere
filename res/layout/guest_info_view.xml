	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/account_txt"
	                    android:padding="8dp"
	                    android:text=""
	                    android:textColor="#6E6E6E"
	                    android:textSize="17sp" />
                </LinearLayout>
        </RelativeLayout>
        
