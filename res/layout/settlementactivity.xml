<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/home_backgroud" >

    <RelativeLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:layout_gravity="top"
        android:background="@drawable/logo_bg"
        android:gravity="center_vertical"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:shadowColor="#75000000"
                android:shadowDy="2.0"
                android:shadowRadius="2.0"
                android:text=""
                android:textColor="#ffffffff"
                android:textSize="20.0sp" />
        </FrameLayout>

        <Button
            android:id="@+id/break_cart"
            android:layout_width="40.0dip"
            android:layout_height="30.0dip"
            android:layout_centerVertical="true"
            android:background="@drawable/title_back"
            android:paddingBottom="2.0dip"
            android:paddingLeft="3.0dip"
            android:paddingRight="3.0dip"
            android:paddingTop="2.0dip"
            android:scaleType="fitXY"
            android:text="@string/cancel_info"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="35.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_red_ico"
            android:gravity="center"
            android:paddingBottom="2.0dip"
            android:paddingLeft="3.0dip"
            android:paddingRight="3.0dip"
            android:paddingTop="2.0dip"
            android:scaleType="fitXY"
            android:text="@string/save_info"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linOne"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LinearLayout01"
        android:layout_centerHorizontal="true"
        android:layout_margin="10.0dip"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            style="@style/style_20_000000_BOLD"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5.0dip"
            android:paddingTop="5.0dip"
            android:text="@string/menu_lable_86" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/listpay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5.0dip"
                android:background="@anim/shape_rounded_rectangle"
                android:cacheColorHint="#00000000" />
        </LinearLayout>

        <TextView
            android:id="@+id/textBalance"
            style="@style/style_20_000000_BOLD"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:paddingBottom="5.0dip"
            android:paddingTop="5.0dip"
            android:text="余额支付"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/relBalance"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@anim/shape_rounded_rectangle"
            android:orientation="horizontal"
            android:padding="10.0dip"
            android:visibility="gone" >

            <TextView
                android:id="@+id/textBalance"
                style="@style/style_16_4B4B4B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="余额支付" />

            <ImageView
                android:id="@+id/imgBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ok" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textBalanceTip"
            style="@style/style_14_C21513"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10.0dip"
            android:text="选择此项，会优先选择余额支付"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linSendTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LinearLayout01"
        android:layout_centerHorizontal="true"
        android:layout_margin="10.0dip"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@anim/shape_rounded_rectangle"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/relSendTime1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10.0dip" >

                <TextView
                    android:id="@+id/textSendTime1"
                    style="@style/style_15_4B4B4B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="30.0dip"
                    android:paddingLeft="10.0dip"
                    android:text="@string/menu_lable_89" />

                <ImageView
                    android:id="@+id/imgSendTime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ok"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line" />

            <RelativeLayout
                android:id="@+id/relSendTime2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10.0dip" >

                <TextView
                    android:id="@+id/textSendTime2"
                    style="@style/style_15_4B4B4B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="30.0dip"
                    android:paddingLeft="10.0dip"
                    android:text="@string/menu_lable_95" />

                <ImageView
                    android:id="@+id/imgSendTime2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ok"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line" />

            <RelativeLayout
                android:id="@+id/relSendTime3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10.0dip" >

                <TextView
                    android:id="@+id/textSendTime3"
                    style="@style/style_15_4B4B4B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="30.0dip"
                    android:paddingLeft="10.0dip"
                    android:text="@string/menu_lable_96" />

                <ImageView
                    android:id="@+id/imgSendTime3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ok"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/line3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line" />

            <RelativeLayout
                android:id="@+id/relSendTime4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10.0dip" >

                <TextView
                    android:id="@+id/textSendTime4"
                    style="@style/style_15_4B4B4B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="30.0dip"
                    android:paddingLeft="10.0dip"
                    android:text="@string/menu_lable_97" />

                <ImageView
                    android:id="@+id/imgSendTime4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ok"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/invoicelin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LinearLayout01"
        android:layout_centerHorizontal="true"
        android:layout_margin="10.0dip"
        android:background="@anim/shape_rounded_rectangle"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10.0dip"
            android:paddingLeft="10.0dip"
            android:paddingTop="10.0dip" >

            <TextView
                style="@style/style_16_4B4B4B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_lable_98" />

            <EditText
                android:id="@+id/editContent"
                style="@style/style_14_000000"
                android:layout_width="200.0dip"
                android:layout_height="wrap_content"
                android:background="@null"
                android:focusable="true"
                android:hint="@string/menu_lable_100"
                android:paddingTop="2.0dip"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line" />

        <LinearLayout
            android:id="@+id/itypeinl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10.0dip"
            android:paddingLeft="10.0dip"
            android:paddingTop="10.0dip" >

            <TextView
                style="@style/style_16_4B4B4B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_lable_99" />

            <TextView
                android:id="@+id/textContent"
                style="@style/style_14_000000"
                android:layout_width="200.0dip"
                android:layout_height="wrap_content"
                android:background="@null"
                android:focusable="true"
                android:paddingTop="2.0dip"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/relComment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LinearLayout01"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/relComment2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/LinearLayout01"
            android:layout_centerHorizontal="true"
            android:layout_margin="10.0dip"
            android:background="@anim/shape_rounded_rectangle"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/editComment"
                android:layout_width="fill_parent"
                android:layout_height="150.0dip"
                android:background="@null"
                android:focusable="true"
                android:gravity="top|left|center"
                android:maxLength="50"
                android:padding="10.0dip" />
        </LinearLayout>

        <TextView
            style="@style/style_16_666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/relComment2"
            android:layout_below="@id/relComment2"
            android:paddingLeft="10.0dip"
            android:text="@string/menu_lable_101" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/relLogistics"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LinearLayout01"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:visibility="gone" >

        <ListView
            android:id="@+id/listLogistics"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10.0dip"
            android:background="@anim/shape_rounded_rectangle"
            android:cacheColorHint="#00000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pointslin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LinearLayout01"
        android:layout_centerHorizontal="true"
        android:layout_margin="10.0dip"
        android:background="@anim/shape_rounded_rectangle"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10.0dip"
            android:paddingLeft="10.0dip"
            android:paddingTop="10.0dip" >

            <TextView
                style="@style/style_16_4B4B4B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_lable_139" />

            <TextView
                style="@style/style_16_4B4B4B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : " />

            <EditText
                android:id="@+id/editPoints"
                style="@style/style_14_000000"
                android:layout_width="200.0dip"
                android:layout_height="wrap_content"
                android:background="@null"
                android:focusable="true"
                android:hint="@string/menu_lable_140"
                android:numeric="integer"
                android:paddingTop="2.0dip"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line" />

        <LinearLayout
            android:id="@+id/itypeinl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5.0dip"
            android:paddingLeft="10.0dip"
            android:paddingTop="10.0dip" >

            <TextView
                style="@style/style_16_4B4B4B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_lable_141" />

            <TextView
                android:id="@+id/currt_points"
                style="@style/style_15_C21513_BOLD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/itypeinl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5.0dip"
            android:paddingLeft="10.0dip"
            android:paddingTop="5.0dip" >

            <TextView
                style="@style/style_16_4B4B4B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_lable_142" />

            <TextView
                android:id="@+id/max_points"
                style="@style/style_15_C21513_BOLD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>