        <RelativeLayout android:id="@+id/post_likeComment" android:paddingLeft="8.0dip" android:layout_width="fill_parent" android:layout_height="30.0dip" >
			    <TextView android:gravity="center" android:id="@+id/album_like_tv" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="@string/sns_like" android:layout_alignParentLeft="true" android:layout_centerVertical="true" style="@style/post_comment_like_font" />
			    <ImageView android:id="@+id/dot" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/tm_feed_pimg" android:layout_toRightOf="@id/album_like_tv" android:layout_centerVertical="true" />
			    <TextView android:gravity="center" android:id="@+id/album_comment_tv" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="@string/sns_comment" android:layout_toRightOf="@id/dot" android:layout_centerVertical="true" style="@style/post_comment_like_font" />
			    <TextView android:id="@+id/comment_count" android:paddingRight="12.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/post_count_font" />
			    <ImageView android:id="@+id/comment_icon" android:paddingRight="4.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4.0dip" android:layout_toLeftOf="@id/comment_count" android:layout_centerVertical="true" android:src="@drawable/selector_comment_icon"/>
			    <TextView android:id="@+id/like_count" android:paddingRight="12.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:layout_toLeftOf="@id/comment_icon" android:layout_centerVertical="true" android:layout_alignWithParentIfMissing="true" style="@style/post_count_font" />
			    <ImageView android:id="@+id/like_icon" android:paddingRight="4.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="center" android:layout_toLeftOf="@id/like_count" android:layout_centerVertical="true" android:src="@drawable/tm_icon_like_on"/>
		</RelativeLayout>
		<TextView android:id="@+id/album_comment_publishID" android:layout_width="fill_parent" android:layout_height="wrap_content" android:visibility="gone" />
